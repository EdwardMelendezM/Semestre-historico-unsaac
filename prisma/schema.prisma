generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name            String? 
  email           String?  
  image           String?
  hashedPassword  String?
  role            String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  titulos         String?
  grados          String?
  lugar           String?
  area            String?
  cargo           String?
  fechaGrado      DateTime?
  fechaCapacitacion DateTime?
  lugarCapacitacion DateTime?
  denominacioncapacitacion DateTime?
  codigo          String?  @unique
  matriculado     String?
  estado          String?
  semestre Semestre[] 
  historial Historial[]
  
}
model Semestre{
   id              String @id @default(auto()) @map("_id") @db.ObjectId
   name            String 
   alumnosCodigo   String   
   user User     @relation(fields:[alumnosCodigo],references: [codigo]) 
   createdAt       DateTime @default(now())
   updatedAt       DateTime @updatedAt
 
  
}
model Historial{
    id              String @id @default(auto()) @map("_id") @db.ObjectId
    alumnosCodigo   String   
    user User     @relation(fields:[alumnosCodigo],references: [codigo]) 
    createdAt       DateTime @default(now())
    updatedAt       DateTime @updatedAt



}




